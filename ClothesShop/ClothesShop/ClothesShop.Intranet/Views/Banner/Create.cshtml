@model ClothesShop.Data.Data.CMS.Banner

@{
    ViewData["Title"] = "Create";
}




<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                

                <div class="card-header pb-0 pt-3 bg-transparent">
                    <h1 class="display">Create Banner</h1>

                </div>
                <form asp-action="Create" id="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control"/>
                                    <span asp-validation-for="Title" class="text-danger"></span>

                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="SubTitle" class="control-label"></label>
                                    <input asp-for="SubTitle" class="form-control"/>
                                    <span asp-validation-for="SubTitle" class="text-danger"></span>

                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="ImageNameUrl" class="control-label"></label>
                                <input asp-for="ImageNameUrl" type="file" class="form-control"/>
                                <span asp-validation-for="ImageNameUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea id="tiny" name="tiny" class="form-control"></textarea>
                                <input id="description" style="display:none" type="hidden" asp-for="Description" class="form-control"/>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ButtonText" class="control-label"></label>
                                <input asp-for="ButtonText" class="form-control"/>
                                <span asp-validation-for="ButtonText" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ButtonUrl" class="control-label"></label>
                                <input asp-for="ButtonUrl" class="form-control"/>
                                <span asp-validation-for="ButtonUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialLinks1" class="control-label"></label>
                                <input asp-for="SocialLinks1" class="form-control"/>
                                <span asp-validation-for="SocialLinks1" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialIcon1" class="control-label"></label>
                                <input asp-for="SocialIcon1" class="form-control"/>
                                <span asp-validation-for="SocialIcon1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialLinks2" class="control-label"></label>
                                <input asp-for="SocialLinks2" class="form-control"/>
                                <span asp-validation-for="SocialLinks2" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialIcon2" class="control-label"></label>
                                <input asp-for="SocialIcon2" class="form-control"/>
                                <span asp-validation-for="SocialIcon2" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialLinks3" class="control-label"></label>
                                <input asp-for="SocialLinks3" class="form-control"/>
                                <span asp-validation-for="SocialLinks3" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialIcon3" class="control-label"></label>
                                <input asp-for="SocialIcon3" class="form-control"/>
                                <span asp-validation-for="SocialIcon3" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialLinks4" class="control-label"></label>
                                <input asp-for="SocialLinks4" class="form-control"/>
                                <span asp-validation-for="SocialLinks4" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SocialIcon4" class="control-label"></label>
                                <input asp-for="SocialIcon4" class="form-control"/>
                                <span asp-validation-for="SocialIcon4" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">

                            <div class="form-check">

                                <label class="custom-control-label">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive"/> @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-primary active" role="button" aria-pressed="true">Back to List</a>
                                <input type="submit" value="Create" id="submit" class="btn btn-primary active"/>

                            </div>

                        </div>


                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            $('#submit').click(function (event) {
                var descriptionValue = tinyMCE.get('tiny').getContent();
                $('#description').val(descriptionValue);
                console.log(descriptionValue);
            });
        });

    </script>
}

