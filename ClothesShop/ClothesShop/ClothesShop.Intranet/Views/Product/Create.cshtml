                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-check">

                                <label class="custom-control-label">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-primary active" role="button" aria-pressed="true">Back to List</a>
                                <input type="submit" value="Create" id="submit" class="btn btn-primary active" />

                            </div>

                        </div>


                    </div>
                </form>
            </div>
