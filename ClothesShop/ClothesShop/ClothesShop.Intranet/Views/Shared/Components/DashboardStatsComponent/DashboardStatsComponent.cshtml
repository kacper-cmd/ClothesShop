@using ClothesShop.Data.Data.Shop;
@model ClothesShop.Intranet.ViewModel.DashboardStatsViewModel

@{
    var recentUsers = ViewBag.RecentUsers as List<User>;
    int changedUsersCount = ViewBag.ChangedUsersCount;
}



<div class="container-fluid py-4">
    <div class="row">
<div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
    <div class="card">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-8">
                    <div class="numbers">
                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Order's today</p>
                        <h5 class="font-weight-bolder">
                            @Model.OrdersToday
                        </h5>
                        <p class="mb-0">
                            <span class="text-success text-sm font-weight-bolder">@Model.OrdersPercentageChange</span>
                            since last week
                        </p>
                    </div>
                </div>
                <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                        <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
    <div class="card">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-8">
                    <div class="numbers">
                        <p class="text-sm mb-0 text-uppercase font-weight-bold">New Clients</p>
                        <h5 class="font-weight-bolder">
                           
                                    @if (recentUsers != null && recentUsers.Count > 0)
                                    {
                                        @foreach (var user in recentUsers)
                                        {
                                            <p>@user.Username</p>
                                        
                                        }
                                    }
                                    

                        </h5>
                        <p class="mb-0">
                                    @if (changedUsersCount > 0)
                                    {
                                    <p>Number of users changed: @changedUsersCount</p>
                                    <span class="text-sm font-weight-bolder"> Number of users changed: @changedUsersCount</span>
                                    }
                                    else
                                    {
                                    <span class="text-danger text-sm font-weight-bolder"> No changes in users since last year.</span>
                                    }
                           
                        </p>
                    </div>
                </div>
                <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                        <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-xl-3 col-sm-6">
    <div class="card">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-8">
                    <div class="numbers">
                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Sales</p>
                        <h5 class="font-weight-bolder">
                            @Model.SalesAmount
                        </h5>
                        <p class="mb-0">
                            <span class="text-success text-sm font-weight-bolder">@Model.SalesPercentageChange</span> than last month
                        </p>
                    </div>
                </div>
                <div class="col-4 text-end">
                    <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                        <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


